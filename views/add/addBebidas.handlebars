            <form action="/add/bebidas" method="post">
                <div class="row">

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Cadastro Bebidas</h5>
                            <div class="card-body">
                                <form id="form" data-parsley-validate="" novalidate="">                                    
                                    <div class="form-group">
                                        <label for="nome">Nome do Bebida</label>
                                        <input type="text" name="nome" id="nome" class="form-control"
                                            placeholder="Digite o nome do Aperitivo">
                                    </div>
                                    <div class="form-group">
                                        <label for="quantidade">Quantidade em Litros</label>
                                        <input type="text" name="quantidade" id="quantidade" class="form-control"
                                            placeholder="Digite o a quantidade em litros da bebida">
                                    </div>
                                    <div class="form-group">
                                        <label for="valorCompra">Valor Compra</label>
                                        <input type="text" name="valorCompra" id="valorCompra"
                                            class="form-control" placeholder="Digite o valor de compra da bebida">
                                    </div>
                                    <div class="form-group">
                                        <label for="valorVenda">Valor Venda</label>
                                        <input type="text" name="valorVenda" id="valorVenda"
                                            class="form-control" placeholder="Digite o valor de venda da bebida">
                                    </div>
                                    <div class="form-group">
                                        <label for="dataValidade">Data Validade</label>
                                        <input type="date" name="dataValidade" id="dataValidade"
                                            class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label for="desc">Descrição do Bebida</label>
                                        <textarea name="desc" id="desc" cols="30" rows="10"
                                            class="form-control"
                                            placeholder="Digite a descrição bebida"></textarea>
                                    </div>
                                    
                                    <hr>
                                    <div class="row pt-2 pt-sm-5 mt-1">
                                        <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0">
                                            <label class="be-checkbox custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input"><span
                                                    class="custom-control-label">Remember me</span>
                                            </label>
                                        </div>
                                        <div class="col-sm-6 pl-0">
                                            <p class="text-right">
                                                <button type="submit" class="btn btn-space btn-primary">Submit</button>
                                                <button class="btn btn-space btn-secondary">Cancel</button>
                                            </p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end basic form -->
                    <!-- ============================================================== -->

<div class="dashboard-main-wrapper">
    <!-- Adionando nav partials -->
    {{>_navDashboard}}
    <!-- Fim nav partials -->
    {{>_sidebarDashboard}}
    <!-- ============================================================== -->
    <!-- wrapper  -->
    <!-- ============================================================== -->

    <div class="dashboard-wrapper">
        <div class="container-fluid  dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Formulário para fazer pedido para o cliente</h2>
                        <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit
                            amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Forms</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Form Validations</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->
            {{>_msg}}
            <div class="row">
                <!-- ============================================================== -->
                <!-- basic form -->
                <!-- ============================================================== -->
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">Cadastro Cliente</h5>
                        <div class="card-body">
                            <form action="#" id="basicform" data-parsley-validate="">
                                <div class="form-group">
                                    <label for="nome">Nome Cliente</label>
                                    <input id="nome" type="text" name="nome" data-parsley-trigger="change" required=""
                                        placeholder="Enter user name" autocomplete="off" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="telefone">Telefone para contato</label>
                                    <input id="telefone" name="telefone" type="number" placeholder="number" required=""
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="bairro">Bairro</label>
                                    <input id="bairro" name="bairro" data-parsley-equalto="#inputendereco" type="text"
                                        required="" placeholder="Digite o nome do bairro" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="rua">Nome da rua</label>
                                    <input id="rua" name="rua" data-parsley-equalto="#inputendereco" type="text"
                                        required="" placeholder="Digite o nome do bairro" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="numeroResisdencia">Numero da Residência</label>
                                    <input id="numeroResisdencia" name="numeroResisdencia"
                                        data-parsley-equalto="#inputendereco" type="text" required=""
                                        placeholder="Digite o nome do bairro" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="complemento_ref">Complemento - Ref</label>
                                    <input id="complemento_ref" name="complemento_ref"
                                        data-parsley-equalto="#inputendereco" type="text" required=""
                                        placeholder="Digite o nome do bairro" class="form-control">
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0">
                                        <label class="be-checkbox custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input"><span
                                                class="custom-control-label">Remember me</span>
                                        </label>
                                    </div>
                                    <div class="col-sm-6 pl-0">
                                        <p class="text-right">
                                            <button type="submit" class="btn btn-space btn-primary">Submit</button>
                                            <button class="btn btn-space btn-secondary">Cancel</button>
                                        </p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end basic form -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- horizontal form -->
                <!-- ============================================================== -->

                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">Produto</h5>
                        <div class="card-body">
                            <form id="form" data-parsley-validate="" novalidate="">
                                <div class="form-group">
                                    <label for="inputEmail2">Tanho Petisco</label>
                                    <select name="" id="" class="form-control">
                                        <option value="">Selecione</option>
                                        <option value="">Tamanho Pequeno Individual</option>
                                        <option value="">Tamanho Médio (2 - 3)</option>
                                        <option value="">Tamanho Grande (4 - 6)</option>
                                        <option value="">Tamanho Combo 01 - Medio + Bebida</option>
                                        <option value="">Tamanho Combo 02 - Grande + Bedida</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="inputRepeatPassword">01- Opção</label>

                                    <select name="" id="" class="form-control">
                                        <option value="">Selecione</option>
                                        {{#each aperitivos}}
                                        <option value="{{dataValues.valor}}">{{dataValues.nome}} = {{dataValues.valor}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                               
                               <div class="form-group">
                                    <label for="inputRepeatPassword">01- Opção</label>

                                    <select name="" id="" class="form-control">
                                        <option value="">Selecione</option>
                                        {{#each aperitivos}}
                                        <option value="{{dataValues.valor}}">{{dataValues.nome}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="inputRepeatPassword">01- Opção</label>

                                    <select name="" id="" class="form-control">
                                        <option value="">Selecione</option>
                                        {{#each aperitivos}}
                                        <option value="{{dataValues.valor}}">{{dataValues.nome}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <hr>
                                <div class="form-group">
                                    <label for="inputEmail2">02- Bebidas</label>
                                    <select name="" id="" class="form-control">
                                        <option value="">Selecione</option>
                                        <option value="">Lanche 1</option>
                                        <option value="">Lanche 2</option>
                                        <option value="">Lanche 3</option>
                                        <option value="">Lanche 4</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail2">02- Quantidade Bebidas</label>
                                    <input type="number" name="quantidade" class="form-control">
                                </div>
                                <hr>
                                <div class="form-group">
                                    <label for="inputPassword2">Observação dos Produtos</label>
                                    <textarea name="" id="" cols="30" rows="10" class="form-control"
                                        placeholder="Digite alguma Observação"></textarea>
                                </div>
                                <div class="row pt-2 pt-sm-5 mt-1">
                                    <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0">
                                        <label class="be-checkbox custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input"><span
                                                class="custom-control-label">Remember me</span>
                                        </label>
                                    </div>
                                    <div class="col-sm-6 pl-0">
                                        <p class="text-right">
                                            <button type="submit" class="btn btn-space btn-primary">Submit</button>
                                            <button class="btn btn-space btn-secondary">Cancel</button>
                                        </p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- ============================================================== -->
                <!-- end horizontal form -->
                <!-- ============================================================== -->
            </div>
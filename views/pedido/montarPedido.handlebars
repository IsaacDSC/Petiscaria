<div class="dashboard-main-wrapper">
    <!-- Adionando nav partials -->
    {{>_navDashboard}}
    <!-- Fim nav partials -->
    {{>_sidebarDashboard}}
    <!-- ============================================================== -->
    <!-- wrapper  -->
    <!-- ============================================================== -->

    <div class="dashboard-wrapper">
        <div class="container-fluid  dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Formulário para fazer pedido para o cliente</h2>
                        <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit
                            amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Forms</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Form Validations</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->
            {{>_msg}}
            <div class="row">
                <!-- ============================================================== -->
                <!-- basic form -->
                <!-- ============================================================== -->
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">Cadastro Cliente</h5>
                        <div class="card-body">
                            <!-- ============================================================== -->
                            <!-- inicio form -->
                            <!-- ============================================================== -->
                            <form action="/pedido/env-pedidos" method="POST" id="basicform" data-parsley-validate="">

                                <div class="form-group">
                                    <label for="nome">Nome Cliente</label>
                                    <input id="nome" type="text" name="nome" data-parsley-trigger="change" required=""
                                        placeholder="Digite o nome do cliente" autocomplete="off" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="telefone">Telefone para contato</label>
                                    <input id="telefone" name="telefone" type="number"
                                        placeholder="Digite o numero de telefone" required="" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="bairro">Bairro</label>
                                    <input id="bairro" name="bairro" data-parsley-equalto="#inputendereco" type="text"
                                        required="" placeholder="Digite o nome do bairro" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="rua">Nome da rua</label>
                                    <input id="rua" name="rua" data-parsley-equalto="#inputendereco" type="text"
                                        required="" placeholder="Digite o nome da rua" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="residencia">Numero da Residência</label>
                                    <input id="residencia" name="residencia"
                                        data-parsley-equalto="#inputendereco" type="text" required=""
                                        placeholder="Digite o numero da residência" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="complemento_ref">Complemento - Ref</label>
                                    <textarea name="complemento_ref" id="complemento_ref" cols="30" rows="10"
                                        class="form-control"
                                        placeholder="Digite o complemento ou referência"></textarea>
                                </div>
                        </div>
                    </div>
                </div>

                <!-- ============================================================== -->
                <!-- end basic form -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- horizontal form -->
                <!-- ============================================================== -->

                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">Produto</h5>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="tamanhoPetisco">Tanho Petisco</label>
                                <select name="tamanhoPetisco" id="tamanhoPetisco" class="form-control">
                                    <option value="null">Selecione</option>
                                    <option value="Tamanho Pequeno Individual">Tamanho Pequeno Individual</option>
                                    <option value="Tamanho Médio (2 - 3)">Tamanho Médio (2 - 3)</option>
                                    <option value="Tamanho Grande (4 - 6)">Tamanho Grande (4 - 6)</option>
                                    <option value="Tamanho Combo 01 - Medio + Bebida">Tamanho Combo 01 - Medio + Bebida</option>
                                    <option value="Tamanho Combo 02 - Grande + Bedida">Tamanho Combo 02 - Grande + Bedida</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="opc01">01- Opção</label>

                                <select name="opc01" id="opc01" class="form-control">
                                    <option value="null">Selecione</option>
                                    {{#each aperitivos}}
                                    <option value="{{dataValues.valor}}">{{dataValues.nome}} = {{dataValues.valor}}
                                    </option>
                                    {{/each}}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="opc02">02- Opção</label>

                                <select name="opc02" id="opc02" class="form-control">
                                    <option value="null">Selecione</option>
                                    {{#each aperitivos}}
                                    <option value="{{dataValues.valor}}">{{dataValues.nome}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="opc03">03- Opção</label>

                                <select name="opc03" id="opc03" class="form-control">
                                    <option value="null">Selecione</option>
                                    {{#each aperitivos}}
                                    <option value="{{dataValues.valor}}">{{dataValues.nome}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <hr>
                            <div class="form-group">
                                <label for="bebidas">Bebidas</label>
                                <select name="bebidas" id="bebidas" class="form-control">
                                    <option value="null">Selecione</option>
                                    <option value="Bebida 1">Bebida 1</option>
                                    <option value="Bebida 2">Bebida 2</option>
                                    <option value="Bebida 3">Bebida 3</option>
                                    <option value="Bebida 4">Bebida 4</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="qtdBebidas">Quantidade Bebidas</label>
                                <input type="number" name="qtdBebidas" class="form-control">
                            </div>
                            <hr>
                            <div class="form-group">
                                <label for="observacao">Observação dos Produtos</label>
                                <textarea name="observacao" id="observacao" cols="30" rows="10" class="form-control"
                                    placeholder="Digite alguma Observação"></textarea>
                            </div>
                            <div class="row pt-2 pt-sm-5 mt-1">
                                <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0">
                                    <label class="be-checkbox custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input"><span
                                            class="custom-control-label">Remember me</span>
                                    </label>
                                </div>
                                <div class="col-sm-6 pl-0">
                                    <p class="text-right">
                                        <button type="submit" class="btn btn-space btn-primary">Submit</button>
                                        <button class="btn btn-space btn-secondary">Cancel</button>
                                    </p>
                                </div>
                            </div>

                            </form>
                            <!-- ============================================================== -->
                            <!-- fim form -->
                            <!-- ============================================================== -->
                        </div>
                    </div>
                </div>

                <!-- ============================================================== -->
                <!-- end horizontal form -->
                <!-- ============================================================== -->
            </div>